// Part 3: Create a Lorenz Attractor
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

print("\n--- Creating Lorenz Attractor ---")~

fn lorenz_step(x, y, z, dt) {
    let sigma = 10.0~
    let rho = 28.0~
    let beta = 2.667~
    
    let dx = sigma * (y - x) * dt~
    let dy = (x * (rho - z) - y) * dt~
    let dz = (x * y - beta * z) * dt~
    
    return [x + dx, y + dy, z + dz]~
}

let lorenz_data = []~
let state = [1.0, 1.0, 1.0]~

seal for i in 0..500 {
    state = lorenz_step(state[0], state[1], state[2], 0.01)~
    lorenz_data = lorenz_data + [state]~
}

manifold Lorenz = embed(lorenz_data, dim=3)~
print("Created Lorenz attractor with", 500, "points")~

